FROM golang:1.24.5-alpine AS build

WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/api ./cmd/api

FROM alpine:3.19
RUN adduser -D -g '' app
USER app

COPY --from=build /out/api /usr/local/bin/api
EXPOSE 8080

ENTRYPOINT ["/usr/local/bin/api"]
